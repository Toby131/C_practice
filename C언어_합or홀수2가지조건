#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

char i;
int j, k, num, sum;

int main()
{	
	printf("1부터 입력한 수까지의 합 구하기 : A \n");
	printf("1부터 입력한 수사이의 홀수 보기 : B \n");
	printf("A,B 중 하나를 입력하세요 :");
	scanf("%c", &i);
	printf("숫자를 입력하세요 :");
	scanf("%d", &num);

	if (i == 'A')
	{
		for (j = 1; j <= num; j++)
		{
			sum += j;
		}
		printf("1에서 입력한 수 까지의 합은 %d입니다.", sum);
	}

	else if (i == 'B')
	{
		for (k = 1; k <= num; k++)
		{
			if ((k % 2) == 0)
			{
				continue;
			}
			else
				printf("%d", k);
			printf("\t");
		}
	}

	else
		printf("잘못된 문자를 입력하였습니다.\n");

	return 0;
}
